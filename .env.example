# Tenable.io API credentials
TENABLE_ACCESS_KEY=your_access_key_here
TENABLE_SECRET_KEY=your_secret_key_here
TENABLE_URL=https://cloud.tenable.com

# Cribl HEC endpoint configuration
CRIBL_HEC_HOST=your_cribl_host_here
CRIBL_HEC_PORT=8088
CRIBL_HEC_TOKEN=your_hec_token_here
CRIBL_HEC_SSL_VERIFY=false

# Events per HEC batch (recommended: 10000)
HEC_BATCH_SIZE=10000

# Max events per feed (0=unlimited, set limit for large environments)
MAX_EVENTS_PER_FEED=0

# Concurrent feed execution (0=sequential, 2=recommended, max 3)
MAX_CONCURRENT_FEEDS=2

# Checkpoint storage directory
CHECKPOINT_DIR=checkpoints
# Max IDs tracked per checkpoint file
CHECKPOINT_MAX_IDS=100000
# Days to retain checkpoint data
CHECKPOINT_RETENTION_DAYS=30

# Process lock directory
LOCK_DIR=locks
# Lock timeout in seconds (1800=30min for large environments)
LOCK_TIMEOUT=1800

# Hours between deleted asset scans (168=weekly)
DELETED_ASSET_SCAN_INTERVAL_HOURS=168

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
# Seconds between daemon runs
SCAN_INTERVAL=3600
